Algoritmo cienPrimerosNúmeros
	// ENTRADA : num
	num <- 0 
	
	Mostrar  "Usando el Mientras(While)"
	// VERDADERA
	Mientras ( num < 100)
		
		num <- num + 1
		Mostrar num
		
	FinMientras
	
	num <- 0 
	
	Mostrar  "Usando el Repetir (Do While)"
	
	Repetir
		num <- num + 1
		Mostrar num
		
	Hasta Que (num > 100)
	//         FALSA
	
FinAlgoritmo
